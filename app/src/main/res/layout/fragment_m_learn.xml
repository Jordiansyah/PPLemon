<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mLearnFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mLearnFragment">

    <ScrollView
        android:id="@+id/sView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mandalabackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Left Side-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <!--Aksara-->
                <LinearLayout
                    android:id="@+id/aksara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_menu_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="2dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="64dp"
                        android:background="@drawable/palamacan" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aksara"
                        android:textSize="20sp"
                        android:textColor="black"/>
                </LinearLayout>
                <!--Sasatoan-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_menu_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="64dp"
                        android:background="@drawable/zgambar1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sasatoan"
                        android:textSize="20sp"
                        android:textColor="black"/>
                </LinearLayout>
                <!--Basic 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_menu_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="64dp"
                        android:background="@drawable/zgambar4" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic 2"
                        android:textSize="20sp"
                        android:textColor="black"/>
                </LinearLayout>
            </LinearLayout>

            <!--Right Side-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:id="@+id/aboutMandala"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="About Mandala"
                    android:background="@drawable/main_menu_button"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"/>
                <LinearLayout
                    android:id="@+id/basic_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_menu_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="92dp"
                        android:background="@drawable/zgambar2" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic 1"
                        android:textSize="20sp"
                        android:textColor="black"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/games"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_menu_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="80dp"
                        android:background="@drawable/zgambar3" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game"
                        android:textSize="20sp"
                        android:textColor="black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_menu_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="80dp"
                        android:background="@drawable/zgambar5" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test"
                        android:textSize="20sp"
                        android:textColor="black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>