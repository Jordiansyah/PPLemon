<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mLearnFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mLearnFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/sView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mandalabackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:id="@+id/aksara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aksara"
                    android:background="@drawable/main_menu_button"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="2dp"/>
                <Button
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number"
                    android:background="@drawable/main_menu_button"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:id="@+id/aboutMandala"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="About Mandala"
                    android:background="@drawable/main_menu_button"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"/>
                <Button
                    android:id="@+id/basic_1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Basic 1"
                    android:background="@drawable/main_menu_button"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>